<UserControl
    x:Class="Konachan.Controls.LoadingRing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Konachan.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Padding="8" CornerRadius="12">
            <StackPanel.Background>
                <SolidColorBrush Color="Gray" Opacity="0.3"/>
            </StackPanel.Background>
            <ProgressRing Foreground="{ThemeResource theme}" IsActive="True" Width="60" Height="60"/>
            <TextBlock Text="加载中,请稍等" HorizontalAlignment="Center" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
